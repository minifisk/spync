

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" />

<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

<script>
    // For materialize
    $(document).ready(function() {
        $('.collapsible').collapsible();
    })

</script>

<h3>Welcome, {{name}}</h3>

<ul class="collapsible">
    <li>
        <div class="collapsible-header"><i class="material-icons">account_circle</i>Your user-code for sharing your profile</div>
        <div class="collapsible-body"><span>{{ contactCode }}</span> <br><br>  
        <a href="/friends/add" class="waves-effect waves-light btn-small">Add a friend</a>


</div>
    </li>
    <li>
        <div class="collapsible-header"><i class="material-icons">face</i>Your favorite artists</div>
        <div class="collapsible-body"><span>
            <ul>
                {{#each artistPreferences}}
                <li><b>{{this.name}}</b></li>
                <a href="{{this.url}}">
                    <img src="{{this.image}}" alt="{{this.name}}" width="300">
                </a>
                {{/each}}
            </ul>

        </span></div>
    </li>
    <li>
        <div class="collapsible-header"><i class="material-icons">album</i>Your favorite songs</div>
        <div class="collapsible-body"><span>
            <ul>
                {{#each trackPreferences}}
                    <li><a href="{{this.url}}">
                        <b>{{this.name}}</b>
                    </a> 
                    - {{this.artist}} - {{this.popularity}}
                </li>
                {{/each}}
            </ul>
        </span></div>
    </li>
</ul>